<h1>New Order</h1>

<%= form_with model: @order do |form| %>

  <div>
    <%= form.label 'Requested time', {class: 'form-label'} %><br>
    <%= form.datetime_local_field :pickup_at, {class: 'form-control'} %>
  </div>
    
  <div>
    <%= form.label 'Delivery required?', {class: 'form-label'} %><br>
    <%= radio_button_tag(:delivery, true) %>
    <%= label_tag(:delivery_true, "Yes") %>
    <%= radio_button_tag(:delivery, false) %>
    <%= label_tag(:delivery_false, "No") %>
  </div>

  <%= render 'lechonbutton', form: form %>
  <%= render 'cart' %>

  <div>
    <%= form.label 'Customer', {class: 'form-label'} %><br />
    <%= select_tag(:id, options_from_collection_for_select(@customers || Customer.all, 'id', 'full_name'), {class: 'form-control'}) %>
  </div>
  <div>
    <%= form.label :first_name, {class: 'form-label'} %><br>
    <%= form.text_field :first_name, {class: 'form-control'} %>
  </div>
  <div>
    <%= form.label :last_name, {class: 'form-label'} %><br>
    <%= form.text_field :last_name, {class: 'form-control'} %>
  </div>

  <div>
    <%= form.submit "Create Order", class: 'btn btn-primary' %>
  </div>
<% end %>